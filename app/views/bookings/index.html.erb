<p id="notice"><%= notice %></p>

<div class ="container-fluid">
<h1><%=t('bookings') %></h1>
<table class = "table">
  <thead>
    <tr>
      <th id = "th"><%=t('barber')%></th>
      <th id = "th">Date</th>
      <th id = "th"><%= t('time') %></th>
      <th id = "th"><%= t('status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= Barber.find(booking.barber_id).name %></td>
        <td><%= booking.date %></td>
        <td><%= booking.time %></td>
        <td><%= booking.status %></td>

        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <button type="button" class="btn btn-primary"id ="bookBTN" onclick="window.location.href = '/bookings/new';" >New Booking</button>
</div>
<br>


