


<div class ="container-fluid">
  <h1 class = "title">Contact us</h1>
  <%= form_for @contact do |f| %>
    <%= f.label :name, :class =>"textl"%><br>
    <%= f.text_field :name, required: true, :class=>"texta" %><br>

    <%= f.label :email, :class =>"textl" %><br>
    <%= f.email_field :email, required: true, :class=>"texta" %><br>

    <%= f.label :message, :class =>"textl" %><br>
    <%= f.text_area :message, as: :text, :class=>"texta" %><br>

    <div class ="hidden">
      <%= f.label :nickname %><br>
      <%= f.text_field :nickname, hint: 'leave this field blank', :class=>"textb" %>
    </div>


    <%=f.submit 'Send Message', class: "button" %>
  <% end %>

</div>
